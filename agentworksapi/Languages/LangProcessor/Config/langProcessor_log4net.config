<!-- **** This version of the Config is intended for development use *** -->
<!-- The master log4net.config file included in install packages will be different -->
<log4net>
  <appender name="RollingFileAppender"
				type="log4net.Appender.RollingFileAppender">
    <Threshold value="ALL"/>
    <file value=".\Logs\LangProcessor.log.xml" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="24MB" />
    <staticLogFileName value="true" />
    <CountDirection value="1" />
    <immediateFlush>true</immediateFlush>
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%thread] %-7level %logger.%property{method} - %message%newline" />
    </layout>
  </appender>

  <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%date [%-2thread] %-7level %logger.%property{method}() - %message%newline" />
    </layout>
  </appender>

  <!-- FileAsyncAppender.  Queues events from calling thread and uses a single thread to write each event 
		to a rolling file appender.  This is used to get security events into the debug log. -->
  <!--<appender name="FileAsyncAppender" type="log4net.Ext.Appenders.AsyncAppender, log4net.Ext.Appenders">
    <Fix value="Partial, Properties" />
    <appender-ref ref="RollingFileAppender" />
  </appender>-->

  <!--asyncForwarder-->
  <!--<appender name="asyncForwarder" type="Log4Net.Async.AsyncForwardingAppender,Log4Net.Async">
    <appender-ref ref="RollingFileAppender" />
    -->
  <!--<appender-ref ref="ConsoleAppender" />-->
  <!--
  </appender>-->

  <root>
    <!-- Change level to ALL for debugging -->
    <level value="ALL"/>
    <!--<appender-ref ref="DualAsyncAppender"/>-->
    <!--<appender-ref ref="asyncForwarder" />-->
    <appender-ref ref="RollingFileAppender" />
  </root>
</log4net>