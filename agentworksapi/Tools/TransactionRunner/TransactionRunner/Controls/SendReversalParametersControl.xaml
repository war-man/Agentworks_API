<UserControl x:Class="TransactionRunner.Controls.SendReversalParametersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TransactionRunner.Controls"
             xmlns:helpers="clr-namespace:TransactionRunner.Helpers"
             xmlns:controls="clr-namespace:TransactionRunner.Helpers.Controls"
             mc:Ignorable="d" 
             d:DesignWidth="300" Initialized="SendReversalParametersControl_Initialized" Visibility="{Binding Visibility}">
    <Grid>
        <Grid Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" x:Name="label" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Width="159" Height="30" FontSize="16" FontWeight="Bold"
                   Content="Send Parameters" />

            <Label    Grid.Row="1" Grid.Column="0" x:Name="lblCountry" HorizontalAlignment="Stretch" Margin="15,0,0,0"
                      Content="Country: " />
            <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CbxCountry" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                      DisplayMemberPath="CountryName" ItemsSource="{Binding CountryList}" SelectedItem="{Binding SelectedCountry}" IsEnabled="{Binding IsAgentValid}" />

            <Label    Grid.Row="2" Grid.Column="0" x:Name="lblState" HorizontalAlignment="Stretch" Margin="15,0,0,0"
                      Content="State: "/>
            <ComboBox Grid.Row="2" Grid.Column="1" x:Name="CbxState" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                      DisplayMemberPath="CountrySubdivisionName" ItemsSource="{Binding CountrySubdivisionList}" SelectedItem="{Binding SelectedCountrySubdivision}" IsEnabled="{Binding IsAgentValid}"/>

            <Label    Grid.Row="3" Grid.Column="0" x:Name="lblCurrency" HorizontalAlignment="Stretch"  Margin="15,0,0,0"
                      Content="Currency: " />
            <ComboBox Grid.Row="3" Grid.Column="1" x:Name="CbxCurrency" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                      DisplayMemberPath="CurrencyName" ItemsSource="{Binding CurrencyList}" SelectedItem="{Binding SelectedCurrency}" IsEnabled="{Binding IsAgentValid}"/>

            <Label    Grid.Row="4" Grid.Column="0" x:Name="lblAmountRange" HorizontalAlignment="Stretch" Margin="15,0,0,0"
                      Content="Amount Range: " />
            <ComboBox Grid.Row="4" Grid.Column="1" x:Name="CbxAmountRange" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                      DisplayMemberPath="Display" ItemsSource="{Binding AmountRangeList}" SelectedItem="{Binding SelectedAmountRange}" IsEnabled="{Binding IsAgentValid}"/>

            <Label    Grid.Row="5" Grid.Column="0" x:Name="lblCustomAmount" HorizontalAlignment="Stretch" Margin="15,0,0,0"
                      Content="Custom amount: "
                      Visibility="{Binding IsCustomAmountRangeSelected, Converter={StaticResource booleanToVisibilityConverter}}" />
            <controls:NumberTextBox Grid.Row="5" Grid.Column="1" x:Name="txtCustomAmount"
                                   Text="{Binding CustomAmount, StringFormat=N2}" DecimalPlaces="2"
                                   Visibility="{Binding IsCustomAmountRangeSelected, Converter={StaticResource booleanToVisibilityConverter}}" />

            <Label    Grid.Row="6" Grid.Column="0" x:Name="lblItemChoiceType" HorizontalAlignment="Stretch" Margin="15,0,0,0"
                      Content="Item Choice Type: "/>
            <ComboBox Grid.Row="6" Grid.Column="1" x:Name="CbxItemChoiceType" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                      DisplayMemberPath="Display" ItemsSource="{Binding ItemChoiceList}"  SelectedItem="{Binding SelectedItemChoice}" IsEnabled="{Binding IsAgentValid}"/>

            <Label    Grid.Row="7" Grid.Column="0" x:Name="lblServiceOptionType" HorizontalAlignment="Stretch"  Margin="15,0,0,0"
                      Content="Service Option Type: "/>
            <ComboBox Grid.Row="7" Grid.Column="1" x:Name="CbxServiceOptionType" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                      DisplayMemberPath="Display" ItemsSource="{Binding ServiceOptionList}" SelectedItem="{Binding SelectedServiceOption}" IsEnabled="{Binding IsAgentValid}"/>
            <Label    Grid.Row="8" Grid.Column="0" x:Name="lblThirdPartyType" HorizontalAlignment="Stretch"  Margin="15,0,0,0"
                      Content="Third Party Type: "/>
            <ComboBox Grid.Row="8" Grid.Column="1" x:Name="CbxThirdPartyType" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                       ItemsSource="{Binding ThirdPartyTypeList}" SelectedItem="{Binding SelectedThirdPartyType}" IsEnabled="{Binding IsAgentValid}">
            </ComboBox>

            <Label Grid.Row="9" Grid.ColumnSpan="2" Content="Send Reversal Parameters" x:Name="lblHeader" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,0,0" Width="220" Height="30" FontSize="16" FontWeight="Bold"></Label>
            <Label Grid.Row="10" Grid.Column="0" Content="Reason for refund:" x:Name="lblReasonForRefund" HorizontalAlignment="Stretch" Margin="15,0,0,0"></Label>
            <ComboBox Grid.Row="10" Grid.Column="1" x:Name="cbxReasonForRefund" HorizontalAlignment="Stretch" Margin="0,1,0,1"
                  ItemsSource="{Binding RefundReasonList}" DisplayMemberPath="Label" SelectedItem="{Binding SelectedRefundReason}" IsEnabled="{Binding IsAgentValid}"></ComboBox>
            <Label Grid.Row="11" Grid.Column="0" Content="Refund fee:" x:Name="lblRefundFee" HorizontalAlignment="Stretch" Margin="15,0,0,0"></Label>
            <CheckBox Grid.Row="11" Grid.Column="1" Content="Yes" x:Name="chkRefundFee" HorizontalAlignment="Stretch" Margin="0,5,0,0"
                  IsChecked="{Binding RefundFee}" IsEnabled="{Binding IsAgentValid}"></CheckBox>
        </Grid>
        <Rectangle Fill="White" Opacity="0.7" Visibility="{Binding ModalVisibility}"></Rectangle>
    </Grid>
</UserControl>
