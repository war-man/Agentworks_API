<UserControl x:Class="TransactionRunner.Controls.TransactionPickerControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    mc:Ignorable="d" 
    d:DesignWidth="300"
    Initialized="TransactionPicker_Initialized" 
    Loaded="TransactionPickerControl_Loaded">
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" x:Name="lblTransactionPicker" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Top" Width="159" Height="30"
               Content="Transaction:" />
            <ComboBox Grid.Column="1" x:Name="CbxEnvironmentSelector" HorizontalAlignment="Stretch" Margin="0,1,0,1" IsSynchronizedWithCurrentItem="True"
                  ItemsSource="{Binding TransactionList}" SelectedItem="{Binding SelectedTransaction}" DisplayMemberPath="Display" IsEnabled="{Binding IsAgentValid}"/>
        </Grid>
        <Rectangle Fill="White" Opacity="0.7" Visibility="{Binding ModalVisibility}"></Rectangle>
    </Grid>
</UserControl>