<Application x:Class="TransactionRunner.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TransactionRunner"
             xmlns:helpers="clr-namespace:TransactionRunner.Helpers"
             xmlns:converters="clr-namespace:TransactionRunner.Helpers.Converters"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Globally used converters-->
        <BooleanToVisibilityConverter x:Key="booleanToVisibilityConverter" />
        <converters:NullToVisibilityConverter x:Key="nullToVisibilityConverter" />
        <converters:InvertedBooleanToVisibilityConverter x:Key="invertedBooleanToVisibilityConverter" />
    </Application.Resources>
</Application>
